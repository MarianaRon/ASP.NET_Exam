@model IEnumerable<ASP.NET_Exam.Data.Schema.Schedule>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.IsInRole("Manager")) {
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}

<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Hall)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Trainer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GroupSize)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDateTime)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Hall!.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trainer!.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupSize) /
                @Html.DisplayFor(modelItem => item.MaxGroupSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDateTime)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                @if (User.IsInRole("Manager")) {
                    <span>|</span>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <span>|</span>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                }
            </td>
        </tr>
    }
    </tbody>
</table>